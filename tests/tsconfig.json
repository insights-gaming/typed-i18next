{
    "compilerOptions": {
        "module": "commonjs",
        "target": "es6",
        "removeComments": false,
        "sourceMap": false,
        "skipDefaultLibCheck": true,
        "pretty": true,
        "noEmit": true,
        "experimentalDecorators": false,
        "baseUrl": "./",
        "types": ["jest", "node"],
        "lib": ["es6", "dom"],
        "moduleResolution": "node",
        "esModuleInterop": true,
        "paths": {
            "@src/*": ["../src/*"]
        },
        "rootDirs": ["./", "../src"]
    }
}
